@model NodeCsMusicStore.Models.Album

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Album</legend>

        <div class="editor-label">
            @Html.LabelFor(()=>Model.GenreId, "Genre")
        </div>
        <div class="editor-field">
            @Html.DropDownList("GenreId", String.Empty)
            @Html.ValidationMessageFor(()=>Model.GenreId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(()=>Model.ArtistId, "Artist")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ArtistId", String.Empty)
            @Html.ValidationMessageFor(()=>Model.ArtistId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(()=>Model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(()=>Model.Title)
            @Html.ValidationMessageFor(()=>Model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(()=>Model.Price)
        </div>
        <div class="editor-field">
            @Html.EditorFor(()=>Model.Price)
            @Html.ValidationMessageFor(()=>Model.Price)
        </div>

        <div class="editor-label">
            @Html.LabelFor(()=>Model.AlbumArtUrl)
        </div>
        <div class="editor-field">
            @Html.EditorFor(()=>Model.AlbumArtUrl)
            @Html.ValidationMessageFor(()=>Model.AlbumArtUrl)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
